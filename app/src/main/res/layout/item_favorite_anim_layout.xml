<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/keyline_4"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/imgAnimation"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@tools:sample/backgrounds/scenic" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieLike"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imgAnimation"
        app:layout_constraintBottom_toBottomOf="@+id/imgAnimation"
        android:scaleType="centerCrop"
        app:lottie_autoPlay="false"
        app:lottie_loop="false"
        app:lottie_rawRes="@raw/like_animation"/>

    <TextView android:id="@+id/txtName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:lines="1"
        android:ellipsize="end"
        app:layout_constraintTop_toBottomOf="@+id/imgAnimation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/keyline_2"
        android:layout_marginStart="@dimen/keyline_2"
        android:textSize="@dimen/_18ssp"
        android:textStyle="bold"
        android:textColor="@color/text_emphasized"
        tools:text="@tools:sample/full_names"/>

    <ImageView
        android:id="@+id/imgAvatar"
        android:layout_width="@dimen/miniAvatarImageSize"
        android:layout_height="@dimen/miniAvatarImageSize"
        android:layout_marginTop="@dimen/keyline_2"
        app:layout_constraintTop_toBottomOf="@+id/txtName"
        app:layout_constraintStart_toStartOf="@+id/txtName"
        tools:background="@tools:sample/backgrounds/scenic" />

    <TextView android:id="@+id/txtCreatorName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:lines="1"
        android:ellipsize="end"
        app:layout_constraintTop_toTopOf="@+id/imgAvatar"
        app:layout_constraintBottom_toBottomOf="@+id/imgAvatar"
        app:layout_constraintStart_toEndOf="@+id/imgAvatar"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/keyline_1"
        android:textSize="@dimen/_13ssp"
        android:textColor="@color/text_normal"
        tools:text="@tools:sample/full_names"/>

</androidx.constraintlayout.widget.ConstraintLayout>