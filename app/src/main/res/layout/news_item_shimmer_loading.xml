<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/keyline_2"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/viewAvatarPlaceholder"
        android:layout_width="@dimen/newsImageSize"
        android:layout_height="@dimen/newsImageSize"
        android:background="@color/loading_gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/viewLine1Placeholder"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_15sdp"
        android:background="@color/loading_gray"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintTop_toTopOf="@+id/viewAvatarPlaceholder"
        app:layout_constraintStart_toEndOf="@+id/viewAvatarPlaceholder"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/_12sdp"/>

    <View
        android:id="@+id/viewLine2Placeholder"
        android:layout_width="0dp"
        android:layout_height="@dimen/_15sdp"
        android:background="@color/loading_gray"
        app:layout_constraintTop_toBottomOf="@+id/viewLine1Placeholder"
        app:layout_constraintStart_toEndOf="@+id/viewAvatarPlaceholder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/viewAvatarPlaceholder"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_12sdp"/>

</androidx.constraintlayout.widget.ConstraintLayout>