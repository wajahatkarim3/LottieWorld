<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!--Top level DayNight theme to be used in AndroidManifest.xml-->
    <style name="Theme.LottieWorld" parent="Theme.LottieWorld.Base"/>

    <style name="Theme.LottieWorld.NoActionBar" parent="Theme.LottieWorld.Base">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--Base custom theme which will be shared between both light and dark theme variants-->
    <!-- Base application theme. -->
    <style name="Theme.LottieWorld.Base" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary_dark</item>
        <item name="colorOnPrimary">@color/color_on_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_secondary</item>
        <item name="colorSecondaryVariant">@color/color_secondary_dark</item>
        <item name="colorOnSecondary">@color/color_on_secondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/color_on_primary</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <item name="toolbarStyle">@style/Theme.LottieWorld.Toolbar</item>
        <item name="android:navigationBarColor">@color/background_material_light</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
        <!-- Customize your theme here. -->
        <item name="drawerArrowStyle">@style/Theme.LottieWorld.Toolbar.DrawerArrowToggle</item>
    </style>

    <!-- Toolbar -->
    <style name="Theme.LottieWorld.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="titleTextColor">@color/color_on_background</item>
        <item name="colorOnPrimary">@color/color_background</item>
        <item name="colorControlNormal">@color/color_on_background</item>
        <item name="colorButtonNormal">@color/color_on_background</item>
        <item name="android:background">@color/color_background</item>
    </style>

    <style name="Theme.LottieWorld.Toolbar.DrawerArrowToggle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/color_on_background</item>
    </style>
</resources>